{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "alwaysStrict": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "removeComments": true,
    "resolveJsonModule": true,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}