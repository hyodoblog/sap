{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "alwaysStrict": true,
    "esModuleInterop": true,
    "declaration": false,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["@nuxt/types", "@nuxtjs/axios", "@types/node", "cookie-universal-nuxt", "vuetify"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
