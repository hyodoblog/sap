{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .ts,.js --ignore-path .gitignore ./src",
    "lintfix": "eslint --ext .js,.ts --ignore-path .gitignore ./src --fix",
    "build": "tsc",
